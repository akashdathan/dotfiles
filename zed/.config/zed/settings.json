{
  "ui_font_size": 19,
  "buffer_font_size": 17,
  "agent_font_size": 17,

  "icon_theme": "Colored Zed Icons Theme Dark",
  "theme": "VSCode Dark Polished",

  "features": {
    "edit_prediction_provider": "copilot"
  },

  "agent": {
    "always_allow_tool_actions": true,
    "button": false,
    "dock": "right",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true
  },

  "soft_wrap": "editor_width",
  "cursor_blink": false,
  "autosave": "on_focus_change",

  "buffer_font_family": "JetBrainsMono Nerd Font Mono",

  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono",
    "font_size": 18,
    "button": false,
    "line_height": {
      "custom": 1.7
    }
  },

  "project_panel": {
    "entry_spacing": "standard",
    "indent_size": 14,
    "button": false,
    "auto_fold_dirs": true
  },

  "relative_line_numbers": true,
  "gutter": {
    "folds": false,
    "runnables": false
  },

  "vertical_scroll_margin": 10,
  "scroll_beyond_last_line": "off",

  "tab_bar": {
    "show_tab_bar_buttons": false,
    "show_nav_history_buttons": false
  },

  "search": {
    "button": false
  },

  "diagnostics": {
    "button": false,
    "include_warnings": false
  },

  "toolbar": {
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false
  },

  "notification_panel": {
    "button": false
  },

  "debugger": {
    "button": false
  },

  "title_bar": {
    "show_project_items": false,
    "show_user_picture": false,
    "show_onboarding_banner": false,
    "show_sign_in": false,
    "show_branch_icon": true
  },

  "show_call_status_icon": false,

  "collaboration_panel": {
    "button": false
  },

  "outline_panel": {
    "button": false,
    "dock": "right"
  },

  "git_panel": {
    "button": false,
    "dock": "left"
  },

  "file_scan_exclusions": [
    "**/.idea",
    "**/.github",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules",
    "**/public",
    "**/.atm.yml",
    "**/.env",
    "**/.env.example",
    "**/.env.template",
    "**/.dockerignore",
    "**/.editorconfig",
    "**/.eslintignore",
    "**/.eslintrc.js",
    "**/.gitignore",
    "**/.lintstagedrc.js",
    "**/.npmrc",
    "**/.nvmrc",
    "**/.prettierignore",
    "**/.prettierrc.js",
    "**/.sortierrc.js",
    "babel.config.js",
    "docker-compose.yml",
    "Dockerfile",
    "Jenkinsfile",
    "jest.config.js",
    "nodemon.json",
    "package-lock.json",
    "postcss.config.js",
    "README.md",
    "RELEASE",
    "removate.json",
    "tailwind.config.js",
    "tsconfig.json",
    "tsconfig.dev.json",
    "tsconfig.prod.json",
    "tsconfig.server.json",
    "webpack.config.base.ts",
    "webpack.config.dev.ts",
    "webpack.config.prod.ts",
    "vite.config.mjs",
    "index.html",

    "renovate.json",
    "migration-test",
    "prisma/views",

    "rabbitmq",
    "opensearch",
    "db/migrations_external_raw",
    "db/scripts",
    "db/flyway",
    "db/seeds-last-modified.json",
    "db/snapshot.sql",
    "db/system.snapshot.sql",
    "db/my.cnf",

    "documentation",
    "scripts"
  ]
}
